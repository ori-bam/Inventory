<div class="container" align="center">
    <form action="/customers/edit" method="POST">
        <h2 align="center">Edit Invoice</h2>
        <div class="col" align="center">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="hidden" name="id" value="{{id}}">
                    <label for="first" style="color: cornflowerblue;">Date</label>
                    <input type="text" class="form-control" placeholder="" name="date" value="{{date}}">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="To"  style="color: cornflowerblue;">To</label>
                    <input type="text" class="form-control" placeholder="" name="to" value="{{to}}"
                       >
                </div>
            </div>
      
                  <div class="col-md-6">
                <div class="form-group">
                    <label for="payment"  style="color: cornflowerblue;">Payment</label>
                    <input type="text" class="form-control" placeholder="" name="payment" value="{{payment}}">
                </div>
            </div>
                         <div class="col-md-6">
                <div class="form-group">
                    <label for="quantity"  style="color: cornflowerblue;">Quantity</label>
                    <input type="text" class="form-control" placeholder="" name="quantity" value="{{quantity}}">
                </div>
            </div>
                         <div class="col-md-6">
                <div class="form-group">
                    <label for="description"  style="color: cornflowerblue;">Description</label>
                    <input type="text" class="form-control" placeholder="" name="description" value="{{description}}">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="total"  style="color: cornflowerblue;">Total</label>
                    <input type="text" class="form-control" placeholder="" name="total" value="{{total}}">
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
    </form>
</div>
