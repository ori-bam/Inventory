<div class="container" align="center">
    <form action="/customers/edit" method="POST">
        <h2 align="center">Edit Customer</h2>
        <div class="col" align="center">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="hidden" name="id" value="{{id}}">
                    <label for="first" style="color: cornflowerblue;">Name</label>
                    <input type="text" class="form-control" placeholder="" name="name" value="{{name}}">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email"  style="color: cornflowerblue;">Email</label>
                    <input type="text" class="form-control" placeholder="" name="email" value="{{email}}"
                       >
                </div>
            </div>
      
                  <div class="col-md-6">
                <div class="form-group">
                    <label for="phone"  style="color: cornflowerblue;">Phone</label>
                    <input type="text" class="form-control" placeholder="" name="price" value="{{phone}}">
                </div>
            </div>
                  <div class="col-md-6">
                <div class="form-group">
                    <label for="city"  style="color: cornflowerblue;">City</label>
                    <input type="text" class="form-control" placeholder="" name="city" value="{{city}}">
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
    </form>
</div>
<br>
